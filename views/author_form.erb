<form class="well" action="/books/<%= @book.bookid() %>/authors" method="post">
    <input name = "bookid" type="hidden" value="<%= @book.bookid %>">
  <div class="form-group">
    <label for="name">Author Name</label>
    <input id = "name" type="text" name="name" class="form-control">
  </div>
  <button type="submit" class="btn btn-success">Add Author</button>
</form>

<a href="/" class="btn btn-default active" role="button">Home</a>
