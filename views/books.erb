<h2>Library Books</h2>
<hr>

<ul class="list-group">
  <% @books.each() do |book| %>
    <li class="list-group-item">
      <a href="/books/<%=book.bookid()%>"><%= book.title() %></a>
      <% if book.overdue? %>
        <span class="death">OVERDUE!</span> <img src="https://lh3.googleusercontent.com/-6OJbrnVVjGE/VuD3q2KrqII/AAAAAAAAs2M/WYy23ggEanI/w426-h240/uzg8DRV.gif" alt="violent stabbing">
      <% end %>
    </li>
  <% end %>
</ul>

<div class="btn-group" role="group">
  <a href="/" class="btn btn-default" role="button">Home</a>
  <a href="/books/new" class="btn btn-warning active" role="button">Add New Book</a>
</div>
